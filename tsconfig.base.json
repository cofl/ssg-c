{
    "compilerOptions": {
        "baseUrl": "packages",
        "target": "ES2019",
        "module": "CommonJS",
        "esModuleInterop": true,
        "declaration": true,

        "strict": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,

        "paths": {
            "@cofl/caisson": [ "caisson" ],
            "@cofl/caisson-cli": [ "caisson-cli" ],
            "@cofl/caisson-markdown": [ "caisson-markdown" ]
        },
        "newLine": "lf"
    }
}
